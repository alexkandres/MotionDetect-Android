<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/notification_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginBottom="10dp"
        android:text="Time"/>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_marginBottom="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/from_time"
            android:layout_marginLeft="20dp"
            android:text="12:00PM - "
            android:textSize="25sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/to_time"
            android:text="1:00PM"
            android:textSize="25sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

    </LinearLayout>

    <TextView
        android:id="@+id/notification_day"
        android:text="Notification Days"
        android:layout_marginLeft="20dp"
        android:layout_marginBottom="10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/mon"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:text="Mon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/tue"
            android:text="Tue"
            android:layout_toRightOf="@+id/mon"
            android:layout_marginRight="20dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/wed"
            android:layout_toRightOf="@+id/tue"
            android:layout_marginRight="20dp"
            android:text="Wed"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/thu"
            android:layout_toRightOf="@+id/wed"
            android:layout_marginRight="20dp"
            android:text="Thu"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/fri"
            android:layout_toRightOf="@+id/thu"
            android:layout_marginRight="20dp"
            android:text="Fri"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/sat"
            android:layout_toRightOf="@+id/fri"
            android:layout_marginRight="20dp"
            android:text="Sat"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/sun"
            android:layout_toRightOf="@+id/sat"
            android:layout_marginRight="20dp"
            android:text="Sun"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <!--Checkbox will be below TextView-->
        <CheckBox
            android:layout_below="@+id/mon"
            android:layout_marginLeft="20dp"
            android:layout_alignParentLeft="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <CheckBox
            android:layout_below="@+id/tue"
            android:layout_toRightOf="@+id/mon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <CheckBox
            android:layout_below="@+id/wed"
            android:layout_toRightOf="@+id/tue"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <CheckBox
            android:layout_below="@id/thu"
            android:layout_toRightOf="@+id/wed"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <CheckBox
            android:layout_below="@+id/fri"
            android:layout_toRightOf="@+id/thu"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <CheckBox
            android:layout_below="@+id/sat"
            android:layout_toRightOf="@+id/fri"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <CheckBox
            android:layout_below="@+id/sun"
            android:layout_toRightOf="@+id/sat"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />


    </RelativeLayout>

    <LinearLayout
        android:layout_weight="1"
        android:gravity="bottom"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <Button
            android:id="@+id/cancel_button"
            android:text="Cancel"
            android:layout_weight=".50"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <Button
            android:id="@+id/save_button"
            android:text="Save"
            android:layout_weight=".50"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </LinearLayout>



</LinearLayout>